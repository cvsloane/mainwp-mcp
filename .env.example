# MainWP MCP Server Configuration
# Copy this file to .env.local and fill in your values

# MainWP Dashboard URL (required)
# The URL of your MainWP Dashboard WordPress installation
MAINWP_DASHBOARD_URL=https://your-mainwp-dashboard.com

# MainWP REST API Key (required)
# Format: consumer_key==consumer_secret
# Generate at: MainWP Dashboard > Settings > REST API > Add API Key
MAINWP_API_KEY=your_consumer_key==your_consumer_secret

# Safety Settings (optional)
# Enable dry-run mode by default for destructive operations
MAINWP_ENABLE_DRY_RUN_BY_DEFAULT=true

# Require confirmation for bulk operations
MAINWP_REQUIRE_CONFIRMATION_BULK=true

# Rate limiting (requests per minute)
MAINWP_RATE_LIMIT_PER_MINUTE=60
